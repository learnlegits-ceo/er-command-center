# ============================================================
# .env.example — Copy this to .env and fill in your values
# NEVER commit your actual .env file
# ============================================================

# Application
APP_NAME=ER Command Center
APP_ENV=development
DEBUG=true
API_VERSION=v1
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-min-32-chars-change-this

# Database (local development)
DATABASE_URL=postgresql+asyncpg://postgres:yourpassword@localhost:5432/er_command_center
DATABASE_SYNC_URL=postgresql://postgres:yourpassword@localhost:5432/er_command_center

# Database (Supabase production — get from Supabase dashboard → Settings → Database)
# DATABASE_URL=postgresql+asyncpg://postgres:[YOUR-PASSWORD]@db.xxxx.supabase.co:5432/postgres
# DATABASE_SYNC_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxx.supabase.co:5432/postgres

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Groq AI — Get your key from https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_VISION_MODEL=llama-3.2-90b-vision-preview

# Trigger.dev (Background Jobs) — https://trigger.dev
TRIGGER_API_KEY=tr_dev_your_trigger_api_key_here
TRIGGER_API_URL=https://api.trigger.dev

# Email Service (Resend) — https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@ercommandcenter.com

# AWS (Optional — for S3 file uploads)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=er-command-center-uploads

# CORS — Frontend URLs allowed to call the API
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://er-frontend.onrender.com

# Redis/Cache (optional — leave blank to disable)
REDIS_URL=redis://localhost:6379/0
