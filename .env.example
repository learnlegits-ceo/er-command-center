# ============================================================
# .env.example  —  Single source of truth for all environment variables
# Copy this file to .env in the repo root and fill in your values.
# ⚠️  NEVER commit the actual .env file.
# ============================================================

# ── Application ──────────────────────────────────────────────
APP_NAME=ER Command Center
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Generate secrets with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-secret-key-min-32-chars
JWT_SECRET_KEY=change-this-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Database ──────────────────────────────────────────────────
# Local PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:yourpassword@localhost:5432/er_command_center
DATABASE_SYNC_URL=postgresql://postgres:yourpassword@localhost:5432/er_command_center

# Supabase / Neon (production) — uncomment and fill in:
# DATABASE_URL=postgresql+asyncpg://postgres:[PASSWORD]@db.xxxx.supabase.co:5432/postgres
# DATABASE_SYNC_URL=postgresql://postgres:[PASSWORD]@db.xxxx.supabase.co:5432/postgres

# ── AI (Groq) ─────────────────────────────────────────────────
# Get your key at https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_VISION_MODEL=llama-3.2-90b-vision-preview

# ── Email (Resend) ────────────────────────────────────────────
# Get your key at https://resend.com/
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@ercommandcenter.com

# ── Background Jobs (Trigger.dev) ────────────────────────────
# Get your key at https://trigger.dev/
# Leave blank to run in mock/no-op mode
TRIGGER_API_KEY=tr_dev_your_trigger_api_key_here
TRIGGER_API_URL=https://api.trigger.dev

# ── CORS ─────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── PostgreSQL Docker (local dev only) ───────────────────────
# Used by docker-compose.yml for the local postgres container
POSTGRES_PASSWORD=change_this_local_postgres_password

# ── Redis / Cache (optional) ─────────────────────────────────
# Leave blank to disable caching
# Include password if Redis auth is enabled (matches REDIS_PASSWORD below)
REDIS_URL=
REDIS_PASSWORD=change_this_local_redis_password

# ── AWS S3 (optional — for file uploads) ─────────────────────
# Leave blank if not using S3
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=er-command-center-uploads

# ── Frontend (Vite) ───────────────────────────────────────────
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_NAME=ER Command Center
VITE_APP_VERSION=1.0.0
VITE_ENV=development
